{
  "compilerOptions": {
    "target": "ES5",
    "module": "None",
    "sourceMap": true,
    "strict": true,
    "outDir": "./build/plugin",
    "outFile": "./build/plugin/iitc.js",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "watch": true,
    "declaration": true
  },
  "lib": ["es5", "es2015.promise", "dom", "es2015"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/iitc-plugin/*"
  ]
}

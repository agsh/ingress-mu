{
  "compilerOptions": {
    "target": "ES2017",
    "module": "None",
    "sourceMap": true,
    "strict": true,
    "outDir": "./build/plugin",
    "outFile": "./build/plugin/iitc-mu.js",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "watch": true,
    "declaration": true
  },
  "lib": ["es2019", "dom"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/plugin/iitc-mu.ts"
  ]
}
